<h1>Editar Entrenador  - <%= pokemonAEditar.nombre %></h1>


<div class="row">
    <div class="col-sm-5">

        <form action="/Entrenador/EditarEntrenador" method="post">
            <div class="form-group">
                <label>Nombre</label>

                <input type="text" class="form-control" placeholder="Ingrese sus Nombres" name="nombre" value="<%= pokemonAEditar.nombre %>">


            </div>
            <div class="form-group">
                <label>Tipo Pokemon 1</label>
                <input type="text" class="form-control" placeholder="Ingrese su tipo de Pokemon" name="tipoPokemon1" value="<%= pokemonAEditar.tipoPokemon1 %>">
            </div>

            <div class="form-group">
                <label>Tipo Pokemon 2</label>
                <input type="text" class="form-control" placeholder="Ingrese su tipo de Pokemon" name="tipoPokemon2" value="<%= pokemonAEditar.tipoPokemon2 %>">

                <input type="hidden" name="idUsuario" value="<%= pokemonAEditar.id %>">

            </div>
            
            <div class="form-group">
                <label>Id Maestro Pokemon</label>
                <input type="text" class="form-control" placeholder="Ingrese id de Maestro pokemon" name="idPokemon" value="<%= pokemonAEditar.idPokemon %>">
            </div>
                                    
            <button type="submit" class="btn btn-success btn-block">Editar Pokemon :)</button>
        </form>

    </div>
    <div class="col-sm-2"></div>

    <div class="col-sm-5 text-center">

        <h2><%= pokemonAEditar.nombre%></h2>
        <h4><%= pokemonAEditar.tipoPokemon1%></h4>
        <p>
            <%= pokemonAEditar.tipoPokemon2%>
        </p>

    </div>
</div>