<h1>Editar Entrenador  - <%= entrenadorAEditar.nombre %></h1>


<div class="row">
    <div class="col-sm-5">

        <form action="/Entrenador/EditarEntrenador" method="post">
            <div class="form-group">
                <label>Nombre</label>

                <input type="text" class="form-control" placeholder="Ingrese sus Nombres" name="nombre" value="<%= entrenadorAEditar.nombre %>">


            </div>
            <div class="form-group">
                <label>Region</label>
                <input type="text" class="form-control" placeholder="Ingrese su Region" name="region" value="<%= entrenadorAEditar.region %>">
            </div>

            <div class="form-group">
                <label>Fecha de Inicio</label>


                <input type="date" class="form-control" placeholder="Ingrese su fecha de inicio Entrenador Pokemon" name="fechaInicioMaestroPokemon" value="<%= entrenadorAEditar.fechaInicioMaestroPokemon %>">

                <input type="hidden" name="idUsuario" value="<%= entrenadorAEditar.id %>">



            </div>
                                    
            <button type="submit" class="btn btn-success btn-block">Editar Usuario :)</button>
        </form>

    </div>
    <div class="col-sm-2"></div>

    <div class="col-sm-5 text-center">

        <h2><%= entrenadorAEditar.nombre%></h2>
        <h4><%= entrenadorAEditar.region%></h4>
        <p>
            <%= entrenadorAEditar.fechaInicioMaestroPokemon%>
        </p>

    </div>
</div>